@import 'jeet'

$breakpoint-page = 1024px
$breakpoint-tablet = 768px
$breakpoint-phone = 640px
// Predefined Break-points
$mediaMaxWidth = 1260px
$mediaBp1Width = 960px
$mediaMinWidth = 480px



$breakpoints = (phone = '640px', tablet = '768px', desktop = '1024px') !default
$v = $breakpoints(tablet)

html
  font-size: 19px
  font-family: Georgia,'times new roman',Times,serif
  @media(max-width: $mediaBp1Width)
    font-size: 16px


body
  // background-color: #aaa
header
  // center(1024px)
  max-width: 1024px
  margin: 0 auto

  nav
    clearfix()
    padding: 15px
    font-size: 0.8rem
    .logo
      display: block
      float: left
      width: 7rem
      font-family: Tahoma, sans-serif
    a
      display: block
      float: right
      white-space: nowrap
      font-family: Tahoma, sans-serif
      margin-left: 2rem
      color: #999
      text-decoration: none
    a:hover
      color: black

//- start: Hero Unit
.hero
  // margin-top: 20px
  margin-bottom: 10px
  height: 768px
  max-height: 80vw
  background: url(/images/hero/becak-lineup.jpg) center no-repeat
  background-size: cover

.hero-cell
  //- span(1/4, $cycle: 4)
  display: block
  float: left
  height: 256px
  max-height: 25vw
  // width: 256px
  width: 25%
  text-align: center
  box-sizing: border-box
  transition: opacity 0.5s ease-in-out
  border: 0 solid white

.hero-cell:nth-child(7)
  background-color: white
  padding-top: 4.2rem
  font-size: 2.2rem
  line-height: 1.4
  color: black
  opacity: 0

.hero-cell:nth-child(10)
  // background-color: white
  // opacity: .8

$hero-border = 6px

.hero-cell:nth-child(4)
  border-width: 0 0 $hero-border $hero-border
  background: url(/images/hero/IMG_4784.jpg) center no-repeat
  background-size: cover
  opacity: 0

.hero-cell:nth-child(5)
  border-width: $hero-border $hero-border $hero-border 0
  background: url(/images/hero/IMG_4773.jpg) center no-repeat
  background-size: cover
  opacity: 0

.hero-cell:nth-child(12)
  border-width: $hero-border 0 0 $hero-border
  background: url(/images/hero/arie-becak.jpg) center no-repeat
  background-size: cover
  opacity: 0

.hero:hover > .hero-cell:nth-child(4)
.hero:hover > .hero-cell:nth-child(5)
.hero:hover > .hero-cell:nth-child(12)
  opacity: 1.0

.hero:hover > .hero-cell:nth-child(10)
  background-color: white
  opacity: 0.8

.hero:hover > .hero-cell:nth-child(7)
  opacity: 1.0
//- end: Hero Unit

artical
  clearfix()
  display: block
  margin: 0 auto
  width: 1024px
  max-width: 100%
  background-color: white
  background-repeat: no-repeat

  img
    display: block
    max-width: 100%

  p
    margin-bottom: 1.5rem
    line-height: 1.2

  p.heading:first-letter
    float: left
    font-size: 75px
    line-height: 60px
    padding-top: 4px
    padding-right: 8px
    padding-left: 3px

  &.reverse
    padding: 1rem 2rem
    background: black url(/images/pg1-reverse.jpg) right center no-repeat
    background-size: contain
    color: white

    p
      margin-left: 2rem
      margin-right: 48%
      font-size: 0.95rem
      line-height: 1.5
      min-width: 320px
      @media(max-width: $breakpoint-tablet)
        margin-left: 0
        font-size: 0.88rem

  @media(max-width: $breakpoint-phone)
    &.reverse
      background: black url(/images/pg1-reverse-sm.jpg) top center no-repeat
      background-size: contain
      width: auto
      p
        margin-right: 0
        // font-size: 14px
        min-width: 0
      p:first-child
        margin-top: 102vw

  .inner
    center(740px)
    max-width: 80%
    padding-top: 2rem
    padding-bottom: 2rem

    & + .inner
    & + .boxed
      padding-top: 0
    .boxed
      padding-bottom: 0

  $boxed-border = 10px
  .boxed
    clearfix()
    padding-top: 3rem
    padding-left: 3rem
    padding-right: 3rem
    padding-bottom: 2rem
    img
      border: $boxed-border solid #666
    img+img
      margin-left: (-1 * $boxed-border)
    & + .inner
      padding-top: 0
    figure
      margin: $boxed-border

.half-col
  float: left
  width: 50%
  box-sizing: border-box

.third-col
  float: left
  width: 33.3%
  box-sizing: border-box

.quarter-col
  float: left
  width: 25%
  box-sizing: border-box

figure
  margin: .25rem 0
  font-size: 0.8rem
  line-height: 1.4
  color: #666
  background-color: white

//- start: parallax section
#main
  perspective: 1px
  transform-style: preserve-3d
  height: 100vh
  overflow-x: hidden
  overflow-y: scroll
  -webkit-overflow-scrolling: touch

header
  position: relative
  transform: translateZ(-1px) scale(2)

.intro
.parallax .inner
  position: relative
  display: block
  background-color: white
  z-index: 1

.parallax
  position: relative
  margin: 0 auto
  max-width: 1024px
  picture
    object-fit: cover
    source
    img
      position: relative
      z-index: -2
      height: auto
      width: 100%
      transform: translateZ(-.2px) scale(1.2)

//- end: parallax section

