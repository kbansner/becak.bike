.top
  position: relative
  display: block
  margin: 4rem auto
  width: 6rem
  height: 1rem
  text-align: center

.top::before
  position absolute
  left: 0
  bottom: 0
  width: 6rem
  height: 5rem
  content: ''

.top::after
  position absolute
  left: 50%
  margin-left: -15px
  bottom: 1.5rem
  width: 30px
  height: 28px
  background: url(/images/arrows.svg) 50% 26px repeat
  background-size: 100%
  transform: rotate(180deg)
  opacity: 0.8
  content: ''
  // transform: backgroundPosition 1s linear

.top:hover::after
  animation: animatedBackground 2s linear infinite;

@keyframes animatedBackground
  from
    background-position-y: 100%
  to
    background-position-y: 01px
