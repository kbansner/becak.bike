  position: relative
  margin: 1rem auto 0
  max-width: 1024px
  picture
    object-fit: cover
    source
    img
      position: relative
      height: auto
      width: 100%
      @media(min-width: $breakpoint-parallax)
        transform: translateZ(-.2px) scale(1.2)
        z-index: -2

