  nav
    +link('index.html', 'Story')(class={'on':page == 'index'})
    +link('plans.html', 'Becak Plans')(class={'on':page == 'plans'})
    +link('contact.html', 'Build Resources')(class={'on':page == 'contact'})
    +link('faq.html', 'FAQ')(class={'on':page == 'faq'})
    -// +link('index.html', 'Tours')(class={'on':page == 'tours'})

mixin footer(page)
  footer
    a.top(href='javascript:$(window).scrollTop(0);', title='Back to top') Top
    nav
      +link('index.html', 'Story')(class={'on':page == 'index'})
      +link('plans.html', 'Becak Plans')(class={'on':page == 'plans'})
      +link('contact.html', 'Build Resources')(class={'on':page == 'contact'})
      +link('faq.html', 'FAQ')(class={'on':page == 'faq'})
    .external
      +link('https://www.instagram.com/becaksf/', instagramIcon)
      +link('https://www.facebook.com/becakSF/', facebookIcon)
      div
        +link('http://kaitours.bike/', 'kaitours.bike')


mixin main-js
  script(src="http://code.jquery.com/jquery-2.2.4.min.js", integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=", crossorigin="anonymous")

  script(type='text/javascript').
    $(document).ready(function () { 
      $('body').addClass('is-js');
      setTimeout(function(){$('.hero').addClass('loaded')}, 1200); 
    });

    $(document).ready(function () { 
      /* A simple and scalable hamburger menu using css transitions. */
      var isActive = false;

      $('.js-menu').on('click', function() {
      	if (isActive) {
      		$(this).removeClass('active');
      		$('body').removeClass('menu-open');
      	} else {
      		$(this).addClass('active');
      		$('body').addClass('menu-open');
      	}
      	isActive = !isActive;
      });
    });
