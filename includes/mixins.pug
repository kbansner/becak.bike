mixin head(pageTitle)
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  <!-- Global site tag (gtag.js) - Google Analytics -->
  script(async, src="https://www.googletagmanager.com/gtag/js?id=UA-50336213-2")
  script.
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'UA-50336213-2');

  link(href='https://fonts.googleapis.com/css?family=EB+Garamond|Ovo' rel='stylesheet')
  link(href='/css/normalize-min.css', rel='stylesheet', type='text/css')
  link(href='/css/main.css', rel='stylesheet', type='text/css')
  title 
    |Becak.bike: 
    =pageTitle


mixin link(href, name)
  a(href=href)&attributes(attributes)= name

mixin navigation(page)
  nav
    -//+link('index.html', 'Becak.bike')(class={'logo':true,'on':page == 'index'})
    +link('faq.html', 'FAQ')(class={'on':page == 'faq'})
    +link('contact.html', 'Build Resources')(class={'on':page == 'contact'})
    +link('plans.html', 'Becak Plans')(class={'on':page == 'plans'})
    +link('index.html', 'Story')(class={'on':page == 'index'})
    -// +link('index.html', 'Tours')(class={'on':page == 'tours'})

mixin footer(page)
  footer
    a.top(href='javascript:$(\'#main\').scrollTop(0);', title='Back to top') Top
    nav
      +link('index.html', 'Story')(class={'logo':true,'on':page == 'index'})
      +link('plans.html', 'Becak Plans')(class={'on':page == 'plans'})
      +link('contact.html', 'Build Resources')(class={'on':page == 'contact'})
      +link('faq.html', 'FAQ')(class={'on':page == 'faq'})


mixin main-js
  script(src="http://code.jquery.com/jquery-2.2.4.min.js", integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=", crossorigin="anonymous")

  script(type='text/javascript').
    $(document).ready(function () { 
      $('#main').addClass('is-js');
      setTimeout(function(){$('.hero').addClass('loaded')}, 1200); 
    });
    
