include includes/mixins.pug

doctype html
html
  +head('Free becak plans')

  body#plans
    #main
      header
        +navigation('plans')
        .hero
          .hero-grid
            #hero-becak1.hero-cell
            #hero-becak2.hero-cell
            #hero-becak3.hero-cell
            #hero-becak4.hero-cell
            #hero-blank-bottom.hero-cell
          h1 
            span Becak Plans

      #intro.pg
        article
          .inner
            dl.plan
              dt
                b Overview
                .download
                  a(href='images/plans/downloads/cab+frame-thumbnail.png') frame+cab.pdf
                  |version 1.0
              dd
                a(href='images/plans/downloads/cab+frame-thumbnail.png')
                  picture
                    -// source(srcset='images/IMG_5547.jpg', media='(max-width: 900px)') // this works!
                    img(src='images/plans/thumbnails/cab+frame-thumbnail.png', width='525', height='245', alt='')

              dt
                b Cab Frame Side
                .download
                  a(href='images/plans/downloads/cab-frame-side.pdf') cab-frame-side.pdf
                  |version 1.0
              dd
                a(href='images/plans/downloads/cab-frame-side.pdf')
                  picture
                    -// source(srcset='images/IMG_5547.jpg', media='(max-width: 900px)') // this works!
                    img(src='images/plans/thumbnails/cab-frame-side-thumbnail.png', width='275', height='263', alt='')
              
              dt
                b Cab Frame Top
                .download
                  a(href='images/plans/downloads/cab-frame-top.pdf') cab-frame-top.pdf
                  |version 1.0
              dd
                a(href='images/plans/downloads/cab-frame-top.pdf')
                  picture
                    -// source(srcset='images/IMG_5547.jpg', media='(max-width: 900px)') // this works!
                    img(src='images/plans/thumbnails/cab-frame-top-thumbnail.png', width='415', height='300', alt='')
              
              dt
                b Cab Seat Structure
                .download
                  a(href='images/plans/downloads/cab-seat-structure.pdf') cab-seat-structure.pdf
                  |version 1.0
                  br
                  |Materials
                  br 
                  |2cm and 3cm flat bar
                  br
                  |Steel rod solid and tubular
              dd
                a(href='images/plans/downloads/cab-seat-structure.pdf')
                  picture
                    -// source(srcset='images/IMG_5547.jpg', media='(max-width: 900px)') // this works!
                    img(src='images/plans/thumbnails/cab-seat-structure-thumbnail.png', width='400', height='175', alt='')

              dt
                b Cab Seat Sheet Metal
                .download
                  a(href='images/plans/downloads/cab-seat-sheet-metal.pdf') cab-seat-sheet-metal.pdf
                  |version 1.0
              dd
                a(href='images/plans/downloads/cab-seat-sheet-metal.pdf')
                  picture
                    img(src='images/plans/thumbnails/cab-seat-sheet-metal-thumbnail.png', width='400', height='175', alt='')

              dt
                b Decorative Tubing
                .download
                  a(href='images/plans/downloads/decorative-tubing.pdf') decorative-tubing.pdf
                  |version 1.0
              dd
                a(href='images/plans/downloads/decorative-tubing.pdf')
                  picture
                    img(src='images/plans/thumbnails/decorative-tubing-thumbnail.png', width='400', height='225', alt='')

              dt
                b Above
                .download
                  a(href='images/plans/downloads/above.pdf') decorative-tubing.pdf
                  |version 1.0
              dd
                a(href='images/plans/downloads/above.pdf')
                  picture
                    img(src='images/plans/thumbnails/above-thumbnail.png', width='400', height='300', alt='')

      +footer
    +main-js
